<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_38"
        android:paddingRight="@dimen/padding_38"
        android:orientation="vertical">
    <com.datalife.datalife.widget.RoundImageView
        android:id="@+id/ic_adduserhead"
        android:layout_width="@dimen/nav_image_size"
        android:layout_height="@dimen/nav_image_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_25"
        android:src="@drawable/girl"/>

    <LinearLayout
        android:id="@+id/ll_add_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_data_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_add_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/my_username"
            android:textColor="@color/w_color"
            android:textSize="@dimen/title_txt_fount" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/my_add_hint"
                android:textColorHint="@color/white"
                android:layout_alignParentRight="true"
                android:textColor="@color/w_color"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:textSize="@dimen/title_txt_fount" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_data_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_sex_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/my_sex_ch"
            android:textColor="@color/w_color"
            android:textSize="@dimen/title_txt_fount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_select_ch"
                android:textColor="@color/w_color"
                android:textSize="@dimen/title_txt_fount" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_height"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_data_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_height_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/my_height_ch"
            android:textColor="@color/w_color"
            android:textSize="@dimen/title_txt_fount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_select_ch"
                android:textColor="@color/w_color"
                android:textSize="@dimen/title_txt_fount" />

            <TextView
                android:id="@+id/text_height_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="CM"
                android:textSize="@dimen/title_txt_fount"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_data_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_weight_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/my_weight_ch"
            android:textColor="@color/w_color"
            android:textSize="@dimen/title_txt_fount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_select_ch"
                android:textColor="@color/w_color"
                android:textSize="@dimen/title_txt_fount" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_data_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/text_age_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:text="@string/my_age_ch"
            android:textColor="@color/w_color"
            android:textSize="@dimen/title_txt_fount" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_select_ch"
                android:textColor="@color/w_color"
                android:textSize="@dimen/title_txt_fount" />


        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    <com.datalife.datalife.widget.MyDateLinear
        android:id="@+id/mydate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></com.datalife.datalife.widget.MyDateLinear>

    <com.datalife.datalife.widget.MyHeightAndWeight
        android:id="@+id/myheight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></com.datalife.datalife.widget.MyHeightAndWeight>

    <com.datalife.datalife.widget.MyHeightAndWeight
        android:id="@+id/myWeight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></com.datalife.datalife.widget.MyHeightAndWeight>

    <com.datalife.datalife.widget.MyHeightAndWeight
        android:id="@+id/myhipline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></com.datalife.datalife.widget.MyHeightAndWeight>
</RelativeLayout>
